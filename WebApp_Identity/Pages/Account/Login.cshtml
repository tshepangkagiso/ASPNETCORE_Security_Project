@page
@model WebApp_Identity.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>User Login</h2>
<br/>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label asp-for="Credential.Email"></label>
        <input asp-for="Credential.Email" class="form-control" />
        <span asp-validation-for="Credential.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credential.Password"></label>
        <input asp-for="Credential.Password" class="form-control" />
        <span asp-validation-for="Credential.Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Credential.RememberMe" class="form-check-input" />
        <label class="form-check-label" for="Credential.RememberMe">Remember Me</label>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
    <br />
    <a class="btn  btn-link" asp-page="/Account/Register">Sign Up</a>
    <br />
    <a class="btn btn-link" asp-page="/Account/ForgotPassword">Forgot password</a>
</form>


